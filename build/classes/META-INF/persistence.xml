<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    
    <persistence-unit name="test33" transaction-type="RESOURCE_LOCAL"> 
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>model.User</class>
        <class>model.Categorie</class>
        <class>model.Produit</class>
        <class>model.Pannier</class>
        <class>model.LignePannier</class>
        
       
        <properties>
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3308/tp3" />
            <property name="eclipselink.logging.level" value="INFO" />
            <property name="eclipselink.allow-zero-id" value="true"/>
        </properties>
    </persistence-unit>
    
</persistence>